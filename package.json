{
  "name": "extensor",
  "version": "1.0.0",
  "description": "Extra funcionalities to socket.io",
  "main": "dist/index.js",
  "module": "dist/extensor.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "index.d.ts",
    "dist/"
  ],
  "scripts": {
    "benchmarks": "node ./benchmarks/index.js",
    "build": "tsdx build",
    "test": "tsdx test --testTimeout 2000 --forceExit",
    "test:watch": "tsdx test --watch",
    "test:coverage": "tsdx test --coverage --testTimeout 2000 --forceExit",
    "report-coverage": "npm run test:coverage && codecov",
    "lint": "tsdx lint ./src/**/*.ts --fix",
    "release": "npm run build && standard-version",
    "publish": "git push --follow-tags origin master"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GX-mobgeek/extensor.git"
  },
  "keywords": [
    "socket.io",
    "extensor",
    "authorization",
    "block",
    "multiple",
    "connections",
    "packet",
    "size",
    "minifier",
    "schemapack"
  ],
  "author": "Fernando Costa",
  "license": "MIT",
  "dependencies": {
    "@types/component-emitter": "^1.2.9",
    "@types/debug": "^4.1.5",
    "@types/ioredis": "^4.14.9",
    "@types/redis": "^2.8.16",
    "@types/socket.io": "^2.1.4",
    "@types/socket.io-client": "^1.4.32",
    "debug": "^4.1.1",
    "schemapack": "^1.4.2"
  },
  "devDependencies": {
    "@types/expect": "^24.3.0",
    "@types/jest": "^25.1.4",
    "benchmark-util": "^1.0.1",
    "husky": "^3.1.0",
    "ioredis": "^4.16.0",
    "lint-staged": "^9.5.0",
    "puppeteer": "^2.1.1",
    "redis": "^3.0.2",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "socket.io-msgpack-parser": "^2.2.0",
    "standard-version": "^7.1.0",
    "tsdx": "^0.13.0",
    "typescript": "^3.8.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint --fix",
      "git add"
    ]
  }
}
