{
  "name": "extensor",
  "version": "0.1.4",
  "description": "Extra funcionalities to socket.io",
  "main": "index",
  "type": "module",
  "scripts": {
    "example": "npm run build && webpack --config ./example/webpack.config.js & npx nodemon ./example/server.js",
    "build": "babel ./src --out-dir ./lib",
    "test": "nyc mocha --require esm --reporter spec --slow 200 --bail --exit --timeout 10000 test/index.js",
    "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint": "./node_modules/.bin/eslint ./src/**",
    "release": "npm run build && standard-version"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GX-mobgeek/extensor.git"
  },
  "esm": {
    "cjs": true
  },
  "keywords": [
    "socket.io",
    "extensor",
    "authorization",
    "block",
    "multiple",
    "connections",
    "packet",
    "size",
    "minifier",
    "schemapack"
  ],
  "author": "Fernando Costa",
  "license": "MIT",
  "dependencies": {
    "schemapack": "^1.4.2",
    "slugify": "^1.3.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.2",
    "@babel/core": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "babel-loader": "^8.0.6",
    "bytes": "^3.1.0",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "esm": "^3.2.25",
    "expect.js": "^0.3.1",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "mocha": "^6.2.0",
    "nyc": "^14.1.1",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "standard-version": "^7.0.0",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9"
  },
  "publishConfig": {
    "access": "public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
